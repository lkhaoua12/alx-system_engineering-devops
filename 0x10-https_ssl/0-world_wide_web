#!/usr/bin/env bash

# Function to retrieve DNS information for a subdomain
get_dns_info() {
    domain="$1"
    subdomain="$2"
    
    if [[ -n "$subdomain" ]]; then
        subdomains=("$subdomain")
    else
        subdomains=("www" "lb-01" "web-01" "web-02")
    fi

    for sub in "${subdomains[@]}"; do
        output=$(dig "$sub.$domain" | grep -A1 'ANSWER SECTION:')
        if [[ -n "$output" ]]; then
            record_type=$(echo "$output" | awk '{print $4}')
            destination=$(echo "$output" | awk '{print $5}')
            printf "The subdomain $sub is a %s record and points to %s\n" "$record_type" "$destination"
        fi
    done
}

# Check for the correct number of arguments
if [[ $# -lt 1 ]]; then
    echo "Usage: $0 domain [subdomain]"
    exit 1
fi

domain="$1"
subdomain="$2"

# Call the function to retrieve DNS information
get_dns_info "$domain" "$subdomain"
